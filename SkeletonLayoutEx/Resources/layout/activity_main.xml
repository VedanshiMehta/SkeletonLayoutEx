<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <io.supercharge.shimmerlayout.ShimmerLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="30dp"
        android:id="@+id/shimmerLayout">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
                
            android:id="@+id/shimmerView1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="11dp"
            android:background="@drawable/shape_circle"/>
        <View
                
            android:id="@+id/shimmerView2"
            android:layout_width="130dp"
            android:layout_height="19dp"
            android:layout_toRightOf="@+id/shimmerView1"
            android:layout_alignTop="@+id/shimmerView1"
            android:background="@color/grey"/>

        <View
                
            android:id="@+id/shimmerView3"
            android:layout_width="70dp"
            android:layout_height="12dp"
            android:layout_toRightOf="@+id/shimmerView1"
            android:layout_alignBottom="@+id/shimmerView1"
            android:background="@color/grey"/>

         <View
                
            android:id="@+id/shimmerDivider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/shimmerView1"
            android:layout_marginTop="11dp"
            android:layout_marginBottom="11dp"
            android:background="@color/grey"/>

         <View
                
            android:id="@+id/shimmerView5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="11dp"
            android:layout_below="@+id/shimmerDivider"
            android:background="@drawable/shape_circle"/>
         <View
                
            android:id="@+id/shimmerView6"
            android:layout_width="130dp"
            android:layout_height="19dp"
            android:layout_toRightOf="@+id/shimmerView5"
            android:layout_alignTop="@+id/shimmerView5"
            android:background="@color/grey"/>

        <View
                
            android:id="@+id/shimmerView7"
            android:layout_width="70dp"
            android:layout_height="12dp"
            android:layout_toRightOf="@+id/shimmerView5"
            android:layout_alignBottom="@+id/shimmerView5"
            android:background="@color/grey"/>

         <View
                
            android:id="@+id/shimmerDivider1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/shimmerView5"
            android:layout_marginTop="11dp"
            android:layout_marginBottom="11dp"
            android:background="@color/grey"/>
    </RelativeLayout>
    
    
    </io.supercharge.shimmerlayout.ShimmerLayout>
</LinearLayout>